<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/Content/materialize/css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <style>
        body {
            background-color: #FFCDD2;
        }

        h2 {
            color: black;
        }

        h3 {
            color: black;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Entretenimiento", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                    
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Ingresos<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cliente", "Index", "Clientes")</li>
                            <li>@Html.ActionLink("Empleado", "Index", "Empleadoes")</li>
                            <li>@Html.ActionLink("Administrador", "Index", "Administradors")</li>
                            <li>@Html.ActionLink("Entretenimiento", "Index", "Entretenimientoes")</li>

                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Categorias<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">

                            <li>@Html.ActionLink("Categorias_Entretenimiento", "Index", "CatEntretenimientoes")</li>
                            <li>@Html.ActionLink("Categorias_Genero", "Index", "CatPeliculas")</li>

                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Venta<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Venta", "NuevoPedido", "Venta")</li>
                            <li>@Html.ActionLink("Facturación", "factura", "Venta")</li>

                            @*<li>@Html.ActionLink("Pedidoes", "Index", "Pedidoes")</li>
                                <li>@Html.ActionLink("PedidoDetalle", "Index", "PedidoDetalles")</li>*@
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Reportes<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Reporte Ventas Admin", "ReporteVentas", "Venta")</li>
                            <li>@Html.ActionLink("Reporte Entretenimiento Admin", "ReporteEntretenimiento", "Venta")</li>

                            <li>@Html.ActionLink("Reporte Ventas Operador", "ReporteVentasOpe", "Venta")</li>
                            <li>@Html.ActionLink("Reporte Entretenimiento Operador", "ReporteEntretenimientoOpe", "Venta")</li>
                            @*<li>@Html.ActionLink("Reporte ", "Index", "Reportes")</li>*@
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MEntretenimieto ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript" src="js/materialize.min.js"></script>
</body>
</html>
