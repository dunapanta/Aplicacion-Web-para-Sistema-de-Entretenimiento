@model IEnumerable<prjProyecto.Models.Entretenimiento>
@{
    ViewBag.Title = "ventaProductoXCategoria";
}

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/Content/materialize/css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            background-image: url(../../Imagenes/Peli.jpg);
        }

        h2 {
            color: black;
        }

        h3 {
            color: black;
        }
    </style>

</head>

<h2>Entretenimiento</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatEntretenimiento.NombreCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatPelicula.NombreGenero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
       <th>
            @Html.DisplayNameFor(model => model.PrecioVent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatEntretenimiento.NombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatPelicula.NombreGenero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
           <td>
                @Html.DisplayFor(modelItem => item.PrecioVent)
            </td>
            <td>
                @Html.ActionLink("Asignar", "NuevoPedido", new { id = item.IdEntrete , c = 1 }, new { @style = "color:#000aaa;" })

            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to List", "agregarProducto", null, new { @class = "btn waves-effect waves-orange" })
</div>