@model IEnumerable<prjProyecto.Models.Entretenimiento>

@{
    ViewBag.Title = "Index";
}
@*<style>
        body {
            background-image: url(../../Imagenes/Peli.jpg)
        }
    </style>*@

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/Content/materialize/css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            background-image: url(../../Imagenes/Peli.jpg);
        }

        h2 {
            color: black;
        }

        h3 {
            color: black;
        }
    </style>
</head>

<h2>Entretenimiento</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn waves-effect waves-orange cyan darken-2" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatEntretenimiento.NombreCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatPelicula.NombreGenero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioVent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatEntretenimiento.NombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatPelicula.NombreGenero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVent)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdEntrete }, new { @class = "btn waves-effect waves-orange light-green darken-2" }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdEntrete }, new { @class = "btn waves-effect waves-orange yellow lighten-2" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdEntrete }, new { @class = "btn waves-effect waves-orange red accent-2" })
            </td>
        </tr>
    }

</table>
