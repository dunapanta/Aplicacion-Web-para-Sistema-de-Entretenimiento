@model IEnumerable<prjProyecto.Models.Empleado>

@{
    ViewBag.Title = "Index";
}
<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/Content/materialize/css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            background-image: url(../../Imagenes/Peli.jpg)
        }

        h2 {
            color: black;
        }

        h3 {
            color: black;
        }
    </style>

</head>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CedulaEmpleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreEmpleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApellidoEmpleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelefonoEmp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CelularEmp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DireccionEmp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailEmp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contrasena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfirmPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CedulaEmpleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreEmpleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApellidoEmpleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TelefonoEmp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CelularEmp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DireccionEmp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailEmp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contrasena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConfirmPassword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdEmpleado }, new { @class = "btn waves-effect waves-orange light-green darken-2" }) |
            @Html.ActionLink("Details", "Details", new { id = item.IdEmpleado }, new { @class = "btn waves-effect waves-orange light-green darken-2" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IdEmpleado }, new { @class = "btn waves-effect waves-orange light-green darken-2" })
        </td>
    </tr>
}

</table>
