@model IEnumerable<prjProyecto.Models.CatEntretenimiento>

@{
    ViewBag.Title = "Categoria Entretenimiento";
}

<!--Import Google Icon Font-->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!--Import materialize.css-->
<link type="text/css" rel="stylesheet" href="~/Content/materialize/css/materialize.min.css" media="screen,projection" />

<!--Let browser know website is optimized for mobile-->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />


<style>
    body {
        background-image: url(../../Imagenes/Peli.jpg);
    }

    h2 {
        color: black;
    }

    h3 {
        color: black;
    }
</style>



<h2>Categoria Entretenimiento</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn waves-effect waves-orange cyan darken-2" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCategoria)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdCatEntrete }, new { @class = "btn waves-effect waves-orange light-green darken-2" }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdCatEntrete }, new { @class = "btn waves-effect waves-orange yellow lighten-2" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdCatEntrete }, new { @class = "btn waves-effect waves-orange red accent-2" })
            </td>
        </tr>
    }

</table>
